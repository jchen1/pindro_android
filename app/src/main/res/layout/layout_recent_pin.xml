<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/grid_pin_width" android:layout_height="@dimen/grid_pin_height"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="@dimen/grid_image_height">

        <ImageView
            android:id="@+id/recent_pin_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/recent_pin_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/white87"
            android:background="@drawable/shadow_topgradient"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Placeholder"
        android:gravity="center"
        android:textColor="@color/white87"
        android:background="@color/darkprimary"/>

</LinearLayout>